<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/jdbc
            http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd">

    <jdbc:embedded-database id="dataSource" type="H2">
        <jdbc:script location="classpath:sql/create/create_tables_h2_core.sql"/>
        <jdbc:script location="classpath:sql/create/insert_core.sql"/>
        <jdbc:script location="classpath:sql/create/create_tables_h2_comment.sql"/>
        <jdbc:script location="classpath:sql/create/insert_comment.sql"/>
        <jdbc:script location="classpath:sql/create/create_tables_h2_blog.sql"/>
        <jdbc:script location="classpath:sql/create/insert_blog.sql"/>
    </jdbc:embedded-database>
</beans>
