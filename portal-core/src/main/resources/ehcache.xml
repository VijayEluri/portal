<ehcache>
	<diskStore path="java.io.tmpdir"/>
	<defaultCache maxElementsInMemory="5000" eternal="true"
		overflowToDisk="false" />
	<cache name="org.hibernate.cache.UpdateTimestampsCache"
		maxElementsInMemory="5000"
    	eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="10"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>	
	<cache name="entity.content"
		maxElementsInMemory="10000"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="query.content"
		maxElementsInMemory="5000"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="query.usercontent"
		maxElementsInMemory="500"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="entity.usercontent"
		maxElementsInMemory="500"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="entity.core"
		maxElementsInMemory="10000"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="query.core"
		maxElementsInMemory="5000"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="entity.user"
		maxElementsInMemory="300"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
	<cache name="query.user"
		maxElementsInMemory="500"
		eternal="true"
		overflowToDisk="false" 
		diskPersistent="false"
		memoryStoreEvictionPolicy="LRU"/>
</ehcache>
 